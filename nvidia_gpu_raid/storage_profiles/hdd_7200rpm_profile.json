{
  "profile_name": "HDD 7200 RPM Enterprise",
  "drive_type": "hdd",
  "interface": "sata3",
  "description": "Optimized for 7200 RPM enterprise HDDs (WD Red, Seagate IronWolf, Toshiba N300, etc.)",

  "drive_characteristics": {
    "sequential_read_mbs": 180,
    "sequential_write_mbs": 180,
    "random_read_iops": 120,
    "random_write_iops": 120,
    "queue_depth": 32,
    "block_size_kb": 4,
    "interface_bandwidth_gbs": 0.6,
    "rotational_latency_ms": 4.16,
    "seek_time_ms": 8.5,
    "cache_mb": 256
  },

  "raid_configuration": {
    "recommended_raid_level": 6,
    "min_drives": 4,
    "max_drives": 12,
    "optimal_drives": 8,

    "stripe_configuration": {
      "stripe_size_kb": 1024,
      "chunk_size_kb": 256,
      "alignment_kb": 4,
      "reason": "Large stripes reduce seek overhead and leverage sequential performance"
    },

    "gpu_raid_settings": {
      "memory_pool_size_mb": 2048,
      "num_streams": 2,
      "block_size_kb": 1024,
      "batch_size_mb": 512,
      "enable_async": true,
      "prefetch_size_mb": 256
    }
  },

  "io_scheduler": {
    "scheduler": "mq-deadline",
    "reason": "Deadline scheduler reduces seek time for rotational media",
    "queue_depth": 32,
    "nr_requests": 128,
    "read_ahead_kb": 1024,
    "rotational": 1,
    "fifo_batch": 16,
    "writes_starved": 4
  },

  "filesystem_recommendations": {
    "xfs": {
      "mount_options": "noatime,nodiratime,logbufs=8,logbsize=256k,largeio,inode64",
      "stripe_unit_kb": 256,
      "stripe_width": 8,
      "agcount": 32
    },
    "ext4": {
      "mount_options": "noatime,nodiratime,data=ordered,commit=60",
      "stride": 64,
      "stripe_width": 512,
      "inode_ratio": 16384
    }
  },

  "performance_tuning": {
    "vm_settings": {
      "dirty_ratio": 40,
      "dirty_background_ratio": 10,
      "dirty_writeback_centisecs": 3000,
      "dirty_expire_centisecs": 6000,
      "swappiness": 10,
      "vfs_cache_pressure": 50
    },

    "hdd_specific": {
      "write_cache": "enabled",
      "ncq_depth": 32,
      "max_hw_sectors_kb": 1024,
      "read_ahead_kb": 2048,
      "apm_level": 254,
      "comment": "APM 254 = performance mode, disable power saving"
    }
  },

  "workload_optimization": {
    "sequential_heavy": {
      "stripe_size_kb": 2048,
      "chunk_size_kb": 512,
      "read_ahead_kb": 4096,
